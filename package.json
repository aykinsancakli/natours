{
  "name": "natours",
  "version": "1.0.0",
  "description": "Landing page for natours",
  "main": "index.js",
  "targets": {
    "main": false
  },
  "browserslist": "last 10 versions",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "copy:html-to-docs": "copy index.html docs\\index.html || cp index.html docs/index.html",
    "copy:img-to-docs": "copy img docs\\img || cp -r img docs/img",
    "copy:css-to-docs": "copy css\\style.css docs\\css\\style.css || cp css/style.css docs/css/style.css",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css && npm-run-all copy:html-to-docs copy:img-to-docs copy:css-to-docs"
  },
  "author": "Aykin Sancakli",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concat": "^1.0.3",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0"
  }
}
